<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.StudentProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user"
            android:drawableBottom="@drawable/ic_line"
            android:drawablePadding="2dp"
            android:hint="Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mail"
            android:drawableBottom="@drawable/ic_line"
            android:drawablePadding="2dp"
            android:hint="Email"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/course_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_course"
            android:drawableBottom="@drawable/ic_line"
            android:drawablePadding="2dp"
            android:hint="Course"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"
            android:drawableBottom="@drawable/ic_line"
            android:drawablePadding="2dp"
            android:hint="MobileNo"
            android:inputType="number"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/regestrationNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_registration"
            android:drawableBottom="@drawable/ic_line"
            android:drawablePadding="2dp"
            android:hint="Registration Number"
            android:textSize="18sp" />

    </LinearLayout>
    
</RelativeLayout>